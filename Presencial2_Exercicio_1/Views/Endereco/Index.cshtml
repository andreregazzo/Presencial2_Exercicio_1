
@model List<Endereco>

@{
    ViewData["Title"] = "Index";
}



<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consultar Endereço</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>


<body>
    <div class="container" style="padding-top:30px">
        <h1>Aula Presencial 2<small> - Exercício 1 - André Regazzo</small></h1>
        <br />
        <hr />

        <form asp-action="PesquisarEndereco" asp-controller="Endereco">
            <input type="number" id="textBoxCEP" name="textBoxCEP" class="form-check-controle col-4" placeholder="Digite o CEP... " />
            <input type="submit" value="Consultar" class="btn btn-info" />

            @if (@ViewData["Mensagem"] != null)
            {
                @:<div class="alert alert-danger" role="alert"> @ViewData["Mensagem"]</div>
            }
            <br />

        </form>


    </div> @*Fim/Container*@

    <div class=" container" style="margin-top:30px">
        <div>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Cep</th>
                        <th scope="col">Logradouro</th>
                        <th scope="col">Complemento</th>
                        <th scope="col">Bairro</th>
                        <th scope="col">Localidade</th>
                        <th scope="col">Uf</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (Endereco p in Model)
                        {
                            <tr>
                                <th scope="row">
                                    @p.Cep
                                </th>
                                <td scope="row">
                                    @p.Logradouro
                                </td>
                                <td scope="row">
                                    @p.Complemento
                                </td>
                                <td scope="row">
                                    @p.Bairro
                                </td>
                                <td scope="row">
                                    @p.Localidade
                                </td>
                                <td scope="row">
                                    @p.Uf
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>


</body>

